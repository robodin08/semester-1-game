{
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon",
    "format": "npx prettier --write .",
    "build:tailwind": "run-p build:tailwind:*",
    "build:tailwind:home": "tailwindcss -i src/styles/home.css -o public/css/home.css --minify",
    "build:tailwind:play": "tailwindcss -i src/styles/play.css -o public/css/play.css --minify",
    "build:tailwind:error": "tailwindcss -i src/styles/error.css -o public/css/error.css --minify",
    "build:tailwind:notifications": "tailwindcss -i src/styles/components/notifications.css -o public/css/components/notifications.css --minify"
  },
  "type": "module",
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "express": "^5.1.0",
    "i18n": "^0.15.1",
    "morgan": "^1.10.1",
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.13",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.1.13",
    "twemoji": "^14.0.2"
  }
}
